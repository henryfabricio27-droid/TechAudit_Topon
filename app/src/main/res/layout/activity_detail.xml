<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <View
        android:id="@+id/viewHeaderStatus"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#9E9E9E"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivIconoDetalle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_menu_camera"
        android:background="@drawable/ic_launcher_background"
        android:padding="16dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="@id/viewHeaderStatus"
        app:layout_constraintTop_toBottomOf="@id/viewHeaderStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvDetalleNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Equipo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivIconoDetalle"/>

    <TextView
        android:id="@+id/tvDetalleId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID: 123456"
        android:gravity="center"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/tvDetalleNombre"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetalleId">

        <TextView
            android:text="Ubicación:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvDetalleUbicacion"
            android:text="Laboratorio 1"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Fecha Registro:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvDetalleFecha"
            android:text="2026-01-01"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Notas de Auditoría:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvDetalleNotas"
            android:text="Sin observaciones."
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>